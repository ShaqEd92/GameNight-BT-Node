<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.ico" />
    <title>Game N!ght</title>
    <meta name="description" content="Rent a wide selection of games." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/stylesheets/App.css" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quantico:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
    <div class="transaction-search-page">

        <div id="tableView">
            <h3>Transaction Search Page</h3>
            <form action="/transaction-search">
                <button id="searchButton" type="submit">Search Past 3 Months Transactions</button>
            </form>
        </div>
        <div id="loadingView" hidden>
            <h3>Grabbing those transactions for you...</h3>
            <object type="image/svg+xml" data="../images/loading.svg"></object>
        </div>
        <div id="loadingViewSafari" hidden>
            <h3>Grabbing those transactions for you...</h3>
        </div>
    </div>
    <script>

        var isSafari = false

        $(document).ready(() => {
            if (navigator.userAgent.indexOf('Safari') != -1 && navigator.userAgent.indexOf('Chrome') == -1) {
                isSafari = true
            }
        })

        document.getElementById("searchButton").addEventListener("click", (event) => {
            document.getElementById("tableView").setAttribute("hidden", true)
            if (!isSafari) document.getElementById("loadingView").removeAttribute("hidden", true)
            if (isSafari) document.getElementById("loadingViewSafari").removeAttribute("hidden", true)
        })
    </script>
</body>

</html>